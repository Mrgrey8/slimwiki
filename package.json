{
  "dependencies": {
    "mithril": "^1.1.1",
    "node-sass": "^4.5.3",
    "parallelshell": "^3.0.1"
  },
  "scripts": {
    "build-js": "bundle src/index.js --output public/js/app.js",
    "watch-js": "bundle src/index.js --output public/js/app.js --watch",
    "build-css": "node-sass src/scss/main.scss public/css/main.css",
    "watch-css": "node-sass src/scss/main.scss public/css/main.css -w",
    "watch": "parallelshell \"npm run watch-js\" \"npm run watch-css\"",
    "build": "npm run build-js && npm run build-css"
  }
}
